<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <title>Profile Page</title>
  <link rel="stylesheet" type="text/css" href="/Styles/fprofile.css">
  <script src="https://kit.fontawesome.com/ee292cad92.js" crossorigin="anonymous"></script>
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/chart.js@2.9.3/dist/Chart.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/papaparse@5.1.0/papaparse.min.js"></script>



  <script>
    $(document).ready(function() {
      $("#li1").click(function() {
        $("#div1").show();
        $("#div2,#div3,#div4,#div5").hide();
      });
      $("#li2").click(function() {
        $("#div2").show();
        $("#div1,#div3,#div4,#div5").hide();
      });
      $("#li3").click(function() {
        $("#div3").show();
        $("#div1,#div2,#div4,#div5").hide();
      });
      $("#li4").click(function() {
        $("#div4").show();
        $("#div1,#div2,#div3,#div5").hide();
      });
      $("#li5").click(function() {
        $("#div5").show();
        $("#div1,#div2,#div3,#div4").hide();
      });
    });
  </script>
</head>

<body>
    
  <div class="container">
    <section class="left-section">
      <div class="left">
        <div class="go-back">
          <i class="fa-solid fa-arrow-left"></i>
        </div>
        <div class="profile">
          <img id="photo" class="profile-pic" src="/images/profile.jpg" alt="profile_pic" />

          <input type="file" id="file" />
          <label for="file" id="uploadbtn">Choose Profile</label>
        </div>
        <div class="name">
          <h1 class="h1">Username</h1>
          <h4 class="h4">profession</h4>
        </div>
        <ul class="side-bar">
            <li id="li1" class="side-bar-elements" href="/"><a style="text-decoration:none;color:white" href="/profile">Profile</a></li>
            <li id="li2" class="side-bar-elements" href="/"><a style="text-decoration:none;color:white" href="/profile/account">Account Details</a></li>
            <li id="li3" class="side-bar-elements" href="/"><a style="text-decoration:none;color:white">Products</a></li>
            <li id="li4" class="side-bar-elements" href="/"><a style="text-decoration:none;color:white"href="/profile/sales">Sales</a></li>
            <li id="li5" class="side-bar-elements" href="/"><a style="text-decoration:none;color:white"href="/profile/orders">Orders</a></li>
            <li id="li6" class="side-bar-elements"><a href="/" style="text-decoration:none;color:white">Logout</a></li>
          </ul>
      </div>
    </section>
    <section class="right-section">
    <div id="div2" class="account" >
        <form class="acc" action="/profile/account" method="post" >
          <h2>Account Informations</h2>
          <div class="form-group">
            <label for="account_name">Account Name:</label>
            <input  type="text" id="account_name" name="accname" contenteditable="true" />
          </div>
          <div class="form-group">
            <label for="account_number">Account Number:</label>
            <input  type="text" id="account_number" name="accnumber" contenteditable="true" />
          </div>
          <div class="form-group">

            <label for="bank_name">Bank Name:</label>
            <input  type="text" id="bank_name" name="bank_name" contenteditable="true" />
          </div>
          <div class="form-group">

            <label for="branch_name">Branch Name:</label>
            <input  type="text" id="branch_name" name="branch_name" contenteditable="true">
          </div>
          <div class="form-group">

            <label for="ifsc">IFSC Code:</label>
            <input type="text" id="ifsc" name="ifsc" contenteditable="true"/> 
          </div>
          <div class="form-group">
            <button type="submit" value="Save">Save</button>
          </div>
        </form>
      </div>
    </section>
    </div>
